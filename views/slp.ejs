    <style>
        :root {
            --primary: #448CCB;
            --primary-light: #64b5f6;
            --primary-dark: #2a6ca7;
            --accent: #d8b4fe;
            --dark-bg: #0a0e15;
            --card-bg: rgba(18, 24, 36, 0.85);
            --text: #ffffff;
            --text-light: #aeb9c4;
            --text-lighter: #8a96a6;
            --highlight: #448CCB;
            --transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);
            --shadow: 0 16px 40px rgba(0, 0, 0, 0.5);
            --border: 1px solid rgba(68, 140, 203, 0.15);
            --gradient: linear-gradient(135deg, var(--primary), var(--primary-light));
            --gold: #d4af37;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            background: var(--dark-bg);
            color: var(--text);
            line-height: 1.7;
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
            font-weight: 300;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background:
                radial-gradient(circle at 10% 20%, rgba(68, 140, 203, 0.05) 0%, transparent 25%),
                radial-gradient(circle at 90% 80%, rgba(100, 181, 246, 0.05) 0%, transparent 25%),
                linear-gradient(135deg, #0a0e15 0%, #09101f 100%);
            z-index: -2;
        }

        body::after {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url("data:image/svg+xml,%3Csvg width='100%25' height='100%25' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.7' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='0.1'/%3E%3C/svg%3E");
            z-index: -1;
            pointer-events: none;
        }

        .container {
            max-width: 1300px;
            margin: 0 auto;
            padding: 0 40px;
        }

        /* Header */
        header {
            padding: 50px 0 30px;
            text-align: center;
            position: relative;
            z-index: 10;
        }

        .logo-container {
            display: inline-flex;
            align-items: center;
            gap: 25px;
            background: rgba(18, 24, 36, 0.8);
            padding: 20px 40px;
            border-radius: 50px;
            backdrop-filter: blur(12px);
            border: var(--border);
            margin-bottom: 40px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
            transition: var(--transition);
            animation: float 8s ease-in-out infinite;
        }

        .logo-img {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #448CCB, #64b5f6);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            box-shadow: 0 0 25px rgba(68, 140, 203, 0.4);
        }

        /* Styling for the new icon */
        .logo-img i {
            font-size: 50px;
            color: #ffffff;
        }

        .logo-text {
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            font-size: 34px;
            letter-spacing: 1px;
            background: var(--gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .project-title {
            font-family: 'Montserrat', sans-serif;
            font-size: clamp(2.8rem, 6vw, 4.5rem);
            font-weight: 700;
            margin-bottom: 15px;
            color: var(--text);
            text-shadow: 0 0 15px rgba(68, 140, 203, 0.3);
            position: relative;
            display: inline-block;
            letter-spacing: -0.5px;
        }

        .project-title::after {
            content: '';
            position: absolute;
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: var(--gradient);
            border-radius: 2px;
        }

        .project-subtitle {
            font-size: clamp(1.4rem, 3.5vw, 1.7rem);
            color: var(--text-light);
            max-width: 800px;
            margin: 40px auto 50px;
            font-weight: 300;
            letter-spacing: 0.5px;
            line-height: 1.6;
        }

        /* Image Gallery */
        .gallery-section {
            padding: 70px 0;
        }

        .gallery-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 35px;
            margin-top: 40px;
        }

        .gallery-item {
            position: relative;
            border-radius: 20px;
            overflow: hidden;
            height: 350px;
            box-shadow: var(--shadow);
            border: var(--border);
            transition: var(--transition);
            opacity: 0;
            transform: translateY(40px);
        }

        .gallery-item.animated {
            opacity: 1;
            transform: translateY(0);
        }

        .gallery-item:hover {
            transform: translateY(-15px);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.6);
        }

        .gallery-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 1.2s cubic-bezier(0.2, 0.8, 0.2, 1);
        }

        .gallery-item:hover .gallery-img {
            transform: scale(1.1);
        }

        .gallery-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            padding: 30px;
            background: linear-gradient(transparent, rgba(10, 14, 21, 0.9));
            color: var(--text);
            opacity: 0;
            transform: translateY(20px);
            transition: var(--transition);
        }

        .gallery-item:hover .gallery-overlay {
            opacity: 1;
            transform: translateY(0);
        }

        .gallery-overlay h3 {
            font-family: 'Montserrat', sans-serif;
            font-size: 1.5rem;
            margin-bottom: 10px;
            font-weight: 600;
        }

        .gallery-overlay p {
            font-size: 1.1rem;
            color: var(--text-light);
            line-height: 1.5;
        }

        /* Content Sections */
        section {
            padding: 120px 0;
            position: relative;
        }

        .section-header {
            text-align: center;
            margin-bottom: 80px;
            position: relative;
        }

        .section-header h2 {
            font-family: 'Montserrat', sans-serif;
            font-size: clamp(2.5rem, 5vw, 3.5rem);
            font-weight: 700;
            margin-bottom: 30px;
            position: relative;
            display: inline-block;
            opacity: 0;
            transform: translateY(30px);
            letter-spacing: -0.5px;
        }

        .section-header.animated h2 {
            opacity: 1;
            transform: translateY(0);
        }

        .section-header h2::after {
            content: '';
            position: absolute;
            bottom: -20px;
            left: 50%;
            transform: translateX(-50%);
            width: 120px;
            height: 5px;
            background: var(--gradient);
            border-radius: 3px;
        }

        .section-header p {
            max-width: 800px;
            margin: 50px auto 0;
            color: var(--text-light);
            font-size: 1.3rem;
            font-weight: 300;
            opacity: 0;
            transform: translateY(20px);
            line-height: 1.7;
        }

        .section-header.animated p {
            opacity: 1;
            transform: translateY(0);
        }

        .card-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(420px, 1fr));
            gap: 50px;
        }

        .card {
            background: var(--card-bg);
            border-radius: 25px;
            padding: 50px 45px;
            backdrop-filter: blur(16px);
            border: var(--border);
            transition: var(--transition);
            box-shadow: var(--shadow);
            position: relative;
            overflow: hidden;
            opacity: 0;
            transform: translateY(40px);
        }

        .card.animated {
            opacity: 1;
            transform: translateY(0);
        }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: var(--gradient);
            transform: scaleX(0);
            transform-origin: left;
            transition: transform 0.8s cubic-bezier(0.23, 1, 0.32, 1);
        }

        .card:hover {
            transform: translateY(-15px);
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.6);
        }

        .card:hover::before {
            transform: scaleX(1);
        }

        .card-icon {
            width: 80px;
            height: 80px;
            background: rgba(68, 140, 203, 0.1);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 35px;
            font-size: 32px;
            color: var(--primary);
        }

        .card h3 {
            font-family: 'Montserrat', sans-serif;
            font-size: 2rem;
            margin-bottom: 30px;
            color: var(--text);
            position: relative;
            padding-bottom: 20px;
            font-weight: 600;
        }

        .card h3::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 60px;
            height: 4px;
            background: var(--primary);
            border-radius: 2px;
        }

        .card p {
            color: var(--text-light);
            margin-bottom: 30px;
            font-size: 1.2rem;
            line-height: 1.8;
        }

        /* New styling for the large card p tags to match small card p tags */
        .card p {
            font-size: 1rem;
            letter-spacing: 2px;
            font-weight: 600;
            color: rgb(13, 133, 252);
            line-height: 1.5;
            margin-bottom: 30px;
        }

        .point-list {
            list-style: none;
            padding-left: 0;
            margin-top: 35px;
        }

        .point-list li {
            padding: 18px 0;
            padding-left: 45px;
            position: relative;
            color: var(--text-light);
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            font-size: 1.2rem;
        }

        .point-list li:last-child {
            border-bottom: none;
        }

        .point-list li::before {
            content: '›';
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            width: 35px;
            height: 35px;
            background: rgba(68, 140, 203, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--primary);
            font-weight: bold;
            font-size: 28px;
        }

        .point-list li strong {
            color: var(--text);
            font-weight: 500;
        }

        /* Stats Section */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 35px;
            margin: 70px 0;
        }

        .stat-item {
            background: rgba(18, 24, 36, 0.85);
            border-radius: 20px;
            padding: 45px 35px;
            text-align: center;
            backdrop-filter: blur(16px);
            border: var(--border);
            transition: var(--transition);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
            opacity: 0;
            transform: scale(0.9);
        }

        .stat-item.animated {
            opacity: 1;
            transform: scale(1);
        }

        .stat-item:hover {
            transform: translateY(-15px) scale(1);
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.6);
            background: rgba(22, 30, 46, 0.9);
        }

        .stat-number {
            font-family: 'Montserrat', sans-serif;
            font-size: clamp(3.5rem, 6vw, 4.5rem);
            font-weight: 700;
            background: var(--gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 20px;
            line-height: 1.2;
        }

        .stat-label {
            color: var(--text-light);
            font-size: 1.2rem;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            font-weight: 400;
        }

        /* Student Project Section */
        .student-project {
            background: linear-gradient(135deg, rgba(18, 24, 36, 0.85), rgba(22, 30, 46, 0.85));
            border-radius: 30px;
            padding: 80px 70px;
            margin: 90px 0;
            border: var(--border);
            box-shadow: var(--shadow);
            backdrop-filter: blur(16px);
            position: relative;
            overflow: hidden;
            opacity: 0;
            transform: translateY(40px);
        }

        .student-project.animated {
            opacity: 1;
            transform: translateY(0);
        }

        .student-project::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 6px;
            background: var(--gradient);
        }

        .highlight-box {
            background: linear-gradient(135deg, rgba(68, 140, 203, 0.2), rgba(100, 181, 246, 0.2));
            border-radius: 20px;
            padding: 50px;
            margin: 60px 0;
            position: relative;
            border-left: 5px solid var(--primary);
            opacity: 0;
            transform: translateY(20px);
        }

        .highlight-box.animated {
            opacity: 1;
            transform: translateY(0);
        }

        .highlight-box::before {
            content: '"';
            font-family: 'Montserrat', sans-serif;
            font-size: 8rem;
            color: var(--text-light);
            opacity: 0.08;
            position: absolute;
            top: -50px;
            left: 30px;
        }

        .highlight-box p {
            font-size: 1.8rem;
            font-style: italic;
            color: var(--text);
            margin-left: 20px;
            font-weight: 300;
            line-height: 1.6;
            position: relative;
            z-index: 2;
        }

        .highlight-box p strong {
            color: var(--primary);
            font-weight: 500;
        }

        /* Animations */
        @keyframes float {
            0% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-25px);
            }

            100% {
                transform: translateY(0px);
            }
        }

        @keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes scaleIn {
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        @keyframes countUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive Design */
        @media (max-width: 1200px) {
            .container {
                max-width: 1100px;
            }

            .card-grid {
                grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
            }
        }

        @media (max-width: 992px) {
            .student-project {
                padding: 60px 50px;
            }

            .highlight-box p {
                font-size: 1.6rem;
            }

            .card-grid {
                gap: 40px;
            }

            .gallery-container {
                grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            }
        }

        @media (max-width: 768px) {
            .card-grid {
                grid-template-columns: 1fr;
            }

            .stats-grid {
                grid-template-columns: 1fr 1fr;
            }

            .student-project {
                padding: 50px 40px;
                margin: 70px 0;
            }

            .highlight-box {
                padding: 40px 30px;
            }

            .highlight-box p {
                font-size: 1.4rem;
                margin-left: 10px;
            }

            .container {
                padding: 0 30px;
            }

            .logo-container {
                padding: 15px 30px;
            }

            .logo-img {
                width: 70px;
                height: 70px;
            }

            .logo-text {
                font-size: 28px;
            }

            /* Adjustments for centered content inside the card */
            .card {
                padding: 40px 30px;
                display: flex;
                flex-direction: column;
                align-items: center;
                text-align: center;
            }

            .card h3::after {
                left: 50%;
                transform: translateX(-50%);
            }

            .point-list li {
                text-align: left;
                padding-left: 45px;
            }

            .point-list li::before {
                left: 0;
            }

            .student-project .card {
                padding: 40px 30px;
                text-align: center;
                align-items: center;
            }

            .highlight-box {
                text-align: left;
            }

            .highlight-box p {
                margin-left: 0;
            }
        }

        /* The key change: Apply hover-like effects to gallery items on smaller screens */
        @media (max-width: 640px) {
            .gallery-item {
                transform: translateY(-10px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4);
            }

            .gallery-item .gallery-img {
                transform: scale(1.05);
            }

            .gallery-item .gallery-overlay {
                opacity: 1;
                transform: translateY(0);
                padding: 20px;
            }
        }

        @media (max-width: 576px) {
            .stats-grid {
                grid-template-columns: 1fr;
            }

            .section-header p {
                font-size: 1.1rem;
            }

            .card {
                padding: 40px 30px;
            }

            .gallery-container {
                grid-template-columns: 1fr;
            }

            .logo-container {
                flex-direction: column;
                gap: 15px;
                padding: 20px;
            }
        }
    </style>
</head>

