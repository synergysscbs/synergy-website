        .stacked-cards-container {
            position: relative;
            margin: 80px auto;
            max-width: 900px;
            perspective: 2000px;
            height: auto;
            min-height: 500px;
        }

        .stacked-cards {
            position: relative;
            height: 100%;
            width: 100%;
        }

        .stacked-card {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            border-radius: 20px;
            padding: 40px;
            background: rgba(18, 24, 36, 0.85);
            backdrop-filter: blur(16px);
            border: 1px solid rgba(68, 140, 203, 0.15);
            box-shadow: 0 16px 40px rgba(0, 0, 0, 0.3);
            transition: transform 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275),
                opacity 0.6s ease,
                z-index 0.1s linear;
            cursor: pointer;
            transform-origin: center bottom;
            opacity: 0.9;
            z-index: 1;
            overflow: hidden;
        }

        .stacked-card h3 {
            font-size: 1.8rem;
            margin-bottom: 25px;
            color: #ffffff;
            position: relative;
            padding-bottom: 15px;
            font-weight: 600;
        }

        .stacked-card h3::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 3px;
            background: #448CCB;
            border-radius: 2px;
        }

        .stacked-card p {
            color: #aeb9c4;
            margin-bottom: 20px;
            font-size: 1.1rem;
            line-height: 1.7;
        }

        .stacked-card.active {
            transform: translateY(0) scale(1) rotateX(0);
            opacity: 1;
            z-index: 10;
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.5);
        }

        .stacked-card.next {
            transform: translateY(30px) scale(0.95) rotateX(-5deg);
            opacity: 0.8;
            z-index: 9;
        }

        .stacked-card.next2 {
            transform: translateY(60px) scale(0.9) rotateX(-10deg);
            opacity: 0.7;
            z-index: 8;
        }

        .stacked-card.next3 {
            transform: translateY(90px) scale(0.85) rotateX(-15deg);
            opacity: 0.6;
            z-index: 7;
        }

        .stacked-card:hover:not(.active) {
            transform: translateY(10px) scale(0.97) rotateX(-2deg);
            opacity: 0.95;
            z-index: 11;
            box-shadow: 0 20px 45px rgba(0, 0, 0, 0.4);
        }

        .stacked-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(135deg, #448CCB, #64b5f6);
            transform: scaleX(0);
            transform-origin: left;
            transition: transform 0.6s ease;
            pointer-events: none;
        }

        .stacked-card.active::before {
            transform: scaleX(1);
        }

        .stacked-controls {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 40px;
            z-index: 100;
            position: relative;
        }

        .stacked-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: rgba(68, 140, 203, 0.3);
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .stacked-dot.active {
            background: #64b5f6;
            transform: scale(1.3);
        }

        .stacked-dot:hover {
            background: #448CCB;
            transform: scale(1.2);
        }

        @media (max-width: 900px) {
            .stacked-cards-container {
                min-height: 420px;
            }
        }

        @media (max-width: 768px) {
            .card-grid {
                grid-template-columns: 1fr;
            }

            .stats-grid {
                grid-template-columns: 1fr 1fr;
            }

            .logo-container {
                flex-direction: column;
                gap: 15px;
                padding: 20px;
            }

            .hero-image {
                height: 350px;
            }

            .stacked-cards-container {
                min-height: 380px;
            }

            .stacked-card {
                padding: 30px;
            }
        }

        @media (max-width: 480px) {
            .stats-grid {
                grid-template-columns: 1fr;
            }

            .section-header p {
                font-size: 1.1rem;
            }

            .card {
                padding: 30px;
            }

            .hero-image {
                height: 300px;
            }

            .stacked-cards-container {
                min-height: 320px;
            }

            .stacked-card {
                padding: 20px;
            }

            .stacked-card h3 {
                font-size: 1.5rem;
            }
        }
    </style>
</head>

