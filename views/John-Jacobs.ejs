            content: '';
            position: absolute;
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 4px;
            background: linear-gradient(135deg, #448CCB, #64b5f6);
            border-radius: 2px;
        }

        .section-header p {
            max-width: 700px;
            margin: 30px auto 0;
            color: #aeb9c4;
            font-size: 1.2rem;
            font-weight: 300;
            line-height: 1.7;
        }

        .card-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 30px;
        }

        .card {
            background: rgba(18, 24, 36, 0.85);
            border-radius: 20px;
            padding: 40px;
            backdrop-filter: blur(16px);
            border: 1px solid rgba(68, 140, 203, 0.15);
            transition: all 0.4s ease;
            box-shadow: 0 16px 40px rgba(0, 0, 0, 0.3);
            position: relative;
            overflow: hidden;
            opacity: 0;
            transform: translateY(40px);
        }

        .card.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(135deg, #448CCB, #64b5f6);
            transform: scaleX(0);
            transform-origin: left;
            transition: transform 0.6s ease;
        }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
        }

        .card:hover::before {
            transform: scaleX(1);
        }

        .card h3 {
            font-size: 1.8rem;
            margin-bottom: 25px;
            color: #ffffff;
            position: relative;
            padding-bottom: 15px;
            font-weight: 600;
        }

        .card h3::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 3px;
            background: #448CCB;
            border-radius: 2px;
        }

        .card p {
            color: #aeb9c4;
            margin-bottom: 20px;
            font-size: 1.1rem;
            line-height: 1.7;
        }

        .point-list {
            list-style: none;
            padding-left: 0;
            margin-top: 25px;
        }

        .point-list li {
            padding: 15px 0;
            padding-left: 40px;
            position: relative;
            color: #aeb9c4;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            font-size: 1.1rem;
        }

        .point-list li:last-child {
            border-bottom: none;
        }

        .point-list li::before {
            content: 'â€º';
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            width: 30px;
            height: 30px;
            background: rgba(68, 140, 203, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #448CCB;
            font-weight: bold;
            font-size: 24px;
        }

        .point-list li strong {
            color: #ffffff;
            font-weight: 500;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 25px;
            margin: 50px 0;
        }

        .stat-item {
            background: rgba(18, 24, 36, 0.85);
            border-radius: 20px;
            padding: 35px 25px;
            text-align: center;
            backdrop-filter: blur(16px);
            border: 1px solid rgba(68, 140, 203, 0.15);
            transition: all 0.4s ease;
            box-shadow: 0 16px 40px rgba(0, 0, 0, 0.3);
            opacity: 0;
            transform: scale(0.9);
        }

        .stat-item.visible {
            opacity: 1;
            transform: scale(1);
        }

        .stat-item:hover {
            transform: translateY(-10px) scale(1);
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
        }

        .stat-number {
            font-size: clamp(2.8rem, 6vw, 3.8rem);
            font-weight: 700;
            background: linear-gradient(135deg, #448CCB, #64b5f6);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 15px;
            line-height: 1.2;
        }

        .stat-label {
            color: #aeb9c4;
            font-size: 1.1rem;
            text-transform: uppercase;
            letter-spacing: 1.2px;
            font-weight: 400;
        }

        .hero-image {
            width: 100%;
            height: 400px;
            border-radius: 20px;
            margin-bottom: 30px;
            overflow: hidden;
            position: relative;
            background: linear-gradient(135deg, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.3)),
                linear-gradient(135deg, #448CCB, #64b5f6);
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .hero-overlay {
            position: absolute;
            z-index: 2;
            text-align: center;
            background: rgba(0, 0, 0, 0.6);
            padding: 30px;
            border-radius: 15px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: white;
            width: 90%;
            max-width: 600px;
