    <style>
        /* Base styles from original HTML */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #0a0e15 0%, #09101f 100%);
            color: #ffffff;
            min-height: 100vh;
            overflow-x: hidden;
            position: relative;
            padding: 0;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background:
                radial-gradient(circle at 10% 20%, rgba(68, 140, 203, 0.05) 0%, transparent 25%),
                radial-gradient(circle at 90% 80%, rgba(100, 181, 246, 0.05) 0%, transparent 25%),
                url("data:image/svg+xml,%3Csvg width='100%25' height='100%25' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.7' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='0.1'/%3E%3C/svg%3E");
            z-index: -1;
            pointer-events: none;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        header {
            text-align: center;
            padding: 60px 0 40px;
            position: relative;
            /* ‚úÖ Force next-line stacking for children (logo box, h1, subtitle) */
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .logo-container {
            display: inline-flex;
            align-items: center;
            gap: 20px;
            background: rgba(18, 24, 36, 0.8);
            padding: 20px 40px;
            border-radius: 50px;
            backdrop-filter: blur(12px);
            border: 1px solid rgba(68, 140, 203, 0.15);
            margin-bottom: 40px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
            animation: float 8s ease-in-out infinite;
        }

        .logo-img {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #448CCB, #64b5f6);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            box-shadow: 0 0 25px rgba(68, 140, 203, 0.4);
        }

        .logo-img img {
            width: 60px;
            height: 60px;
            object-fit: contain;
            filter: brightness(0) invert(1);
        }

        .logo-text {
            font-weight: 700;
            font-size: 34px;
            letter-spacing: 1px;
            background: linear-gradient(135deg, #448CCB, #64b5f6);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .project-title {
            font-size: clamp(2.5rem, 6vw, 4rem);
            font-weight: 700;
            margin-bottom: 15px;
            color: #ffffff;
            text-shadow: 0 0 15px rgba(68, 140, 203, 0.3);
            position: relative;
            letter-spacing: -0.5px;
            /* h1 is block by default; header flex already stacks it next line */
        }

        .project-title::after {
            content: '';
            position: absolute;
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: linear-gradient(135deg, #448CCB, #64b5f6);
            border-radius: 2px;
        }

        .project-subtitle {
            font-size: clamp(1.2rem, 3vw, 1.5rem);
            color: #aeb9c4;
            max-width: 800px;
            margin: 40px auto 0;
            font-weight: 300;
            letter-spacing: 0.5px;
            line-height: 1.6;
        }

        section {
            padding: 80px 0;
            position: relative;
            opacity: 0;
            transform: translateY(30px);
            transition: all 1s ease;
        }

        section.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .section-header {
            text-align: center;
            margin-bottom: 60px;
            position: relative;
            opacity: 0;
            transform: translateY(20px);
            transition: all 1s ease 0.2s;
        }

        .section-header.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .section-header h2 {
            font-size: clamp(2rem, 5vw, 3rem);
            font-weight: 700;
            margin-bottom: 20px;
            position: relative;
            display: inline-block;
            letter-spacing: -0.5px;
        }

        .section-header h2::after {
            content: '';
            position: absolute;
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 4px;
            background: linear-gradient(135deg, #448CCB, #64b5f6);
            border-radius: 2px;
        }

        .section-header p {
            max-width: 700px;
            margin: 30px auto 0;
            color: #aeb9c4;
            font-size: 1.2rem;
            font-weight: 300;
            line-height: 1.7;
        }

        .card-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 30px;
            margin-top: 40px;
        }

        .card {
            background: rgba(18, 24, 36, 0.85);
            border-radius: 20px;
            padding: 40px;
            backdrop-filter: blur(16px);
            border: 1px solid rgba(68, 140, 203, 0.15);
            transition: all 0.4s ease;
            box-shadow: 0 16px 40px rgba(0, 0, 0, 0.3);
            position: relative;
            overflow: hidden;
            opacity: 0;
            transform: translateY(40px);
        }

        .card.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(135deg, #448CCB, #64b5f6);
            transform: scaleX(0);
            transform-origin: left;
            transition: transform 0.6s ease;
        }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
        }

        .card:hover::before {
            transform: scaleX(1);
        }

        .card h3 {
            font-size: 1.8rem;
            margin-bottom: 25px;
            color: #ffffff;
            position: relative;
            padding-bottom: 15px;
            font-weight: 600;
        }

        .card h3::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 3px;
            background: #448CCB;
            border-radius: 2px;
        }

        .card p {
            color: #aeb9c4;
            margin-bottom: 20px;
            font-size: 1.1rem;
            line-height: 1.7;
        }

        .point-list {
            list-style: none;
            padding-left: 0;
            margin-top: 25px;
        }

        .point-list li {
            padding: 15px 0 15px 40px;
            position: relative;
            color: #aeb9c4;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            font-size: 1.1rem;
        }

        .point-list li:last-child {
            border-bottom: none;
        }

        .point-list li::before {
            content: '‚Ä∫';
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            width: 30px;
            height: 30px;
            background: rgba(68, 140, 203, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #448CCB;
            font-weight: bold;
            font-size: 24px;
        }

        .point-list li strong {
            color: #ffffff;
            font-weight: 500;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 25px;
            margin: 50px 0;
        }

        .stat-item {
            background: rgba(18, 24, 36, 0.85);
            border-radius: 20px;
            padding: 35px 25px;
            text-align: center;
            backdrop-filter: blur(16px);
            border: 1px solid rgba(68, 140, 203, 0.15);
            transition: all 0.4s ease;
            box-shadow: 0 16px 40px rgba(0, 0, 0, 0.3);
            opacity: 0;
            transform: scale(0.9);
        }

        .stat-item.visible {
            opacity: 1;
            transform: scale(1);
        }

        .stat-item:hover {
            transform: translateY(-10px) scale(1);
            /* fixed invalid value */
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
        }

        .stat-number {
            font-size: clamp(2.8rem, 6vw, 3.8rem);
            font-weight: 700;
            background: linear-gradient(135deg, #448CCB, #64b5f6);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 15px;
            line-height: 1.2;
        }

        .stat-label {
            color: #aeb9c4;
            font-size: 1.1rem;
            text-transform: uppercase;
            letter-spacing: 1.2px;
            font-weight: 400;
        }

        .card-image-container {
            width: 100%;
            height: 250px;
            border-radius: 15px;
            margin-bottom: 30px;
            overflow: hidden;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: rgba(68, 204, 255, 0.1);
            color: #448CCB;
            font-size: 3rem;
        }

        .card-image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .card-image-container.hero {
            background-image: url('/images/zypp/delivery-through-zypp-electric-vehicle-2-wheelers-1.jpg');
            background-size: cover;
            background-position: center;
            height: 400px;
        }

        .card-image-container .overlay-text {
            position: absolute;
            z-index: 2;
            text-align: center;
            background: rgba(0, 0, 0, 0.6);
            padding: 20px;
            border-radius: 10px;
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: white;
            width: 90%;
        }

        .card-image-container .overlay-text h3 {
            font-size: clamp(1.5rem, 3vw, 2.5rem);
            margin-bottom: 10px;
            color: white;
        }

        .card-image-container .overlay-text p {
            font-size: clamp(1rem, 2vw, 1.5rem);
            color: #d0d0d0;
        }

        .highlight-box {
            background: linear-gradient(135deg, rgba(68, 140, 203, 0.2), rgba(100, 181, 246, 0.2));
            border-radius: 20px;
            padding: 40px;
            margin: 60px 0;
            position: relative;
            border-left: 5px solid #448CCB;
            opacity: 0;
            transform: translateY(20px);
        }

        .highlight-box.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .highlight-box p {
            font-size: 1.6rem;
            font-style: italic;
            color: #ffffff;
            margin-left: 20px;
            font-weight: 300;
            line-height: 1.6;
            position: relative;
            z-index: 2;
        }

        .highlight-box p strong {
            color: #64b5f6;
            font-weight: 500;
        }

        /* Animations */
        @keyframes float {
            0% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-20px);
            }

            100% {
                transform: translateY(0px);
            }
        }

        /* Responsive Styles */
        @media (max-width: 768px) {
            .card-grid {
                grid-template-columns: 1fr;
            }

            .stats-grid {
                grid-template-columns: 1fr 1fr;
            }

            .logo-container {
                flex-direction: column;
                gap: 15px;
                padding: 20px;
            }

            .card-image-container.hero {
                height: 400px;
            }
        }

        @media (max-width: 480px) {
            .stats-grid {
                grid-template-columns: 1fr;
            }

            .section-header p {
                font-size: 1.1rem;
            }

            .card {
                padding: 30px;
            }

            .card-image-container.hero {
                height: 350px;
            }
        }
    </style>
</head>

