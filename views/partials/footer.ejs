<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Footer | SYNERGY</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        footer {
            background: black;
            color: #b8c5d6;
            padding: 20px;
            text-align: center;
            position: relative;
            scroll-margin-top: 100px;
            z-index: 30;
        }

        .footer-content {
            max-width: 1000px;
            margin: 0 auto;
            padding-top: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 15px;
            transition: all 0.3s ease;
        }

        /* Brand block (logo + text together) */
        .footer-brand-block {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 8px;
            cursor: pointer;
        }

        .footer-logo {
            width: 80px;
            height: 80px;
            border-radius: 16px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .footer-logo:hover {
            transform: scale(1.1);
        }

        .footer-brand {
            font-size: 1.5rem;
            font-weight: 700;
            background: linear-gradient(91deg, #ffffff 0%, #44ccff 100%);
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            transition: all 0.3s ease;
            text-shadow: 0 0 6px rgba(68, 204, 255, 0.4);
        }

        .footer-brand:hover {
            transform: translateY(-2px);
        }

        /* Social Icons */
        .footer-social {
            display: flex;
            gap: 20px;
            margin-top: 5px;
            margin-bottom: 10px;
        }

        .social-icon-footer {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            cursor: pointer;
            font-size: 16px;
            color: black;
        }

        .social-icon-footer:hover {
            transform: translateY(-3px) scale(1.1);
            background: #44ccff;
            color: white;
        }

        /* Responsive logo sizes */
        @media (min-width: 768px) {
            .footer-logo {
                width: 100px;
                height: 100px;
            }
        }

        @media (min-width: 1200px) {
            .footer-logo {
                width: 120px;
                height: 120px;
            }
        }
    </style>
</head>

<body>
    <footer id="contact-us">
        <div class="footer-content">

            <!-- Logo + Brand together -->
            <div class="footer-brand-block" id="footer-brand-block">
                <img src="/images/LOGO/synergy grey.png" alt="SYNERGYSSBS Logo" class="footer-logo">
                <div class="footer-brand">SYNERGY | SSCBS</div>
            </div>

            <!-- Social Media -->
            <div class="footer-social">
                <a href="https://www.instagram.com/synergy_sscbs/" class="social-icon-footer" target="_blank"
                    rel="noopener noreferrer" aria-label="Instagram">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="https://www.linkedin.com/company/synergy-the-corporate-society-of-sscbs/posts/?feedView=all"
                    class="social-icon-footer" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
                    <i class="fab fa-linkedin-in"></i>
                </a>
            </div>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const brandBlock = document.getElementById('footer-brand-block');
            if (brandBlock) {
                brandBlock.addEventListener('click', () => {
                    window.scrollTo({
                        top: 0,
                        behavior: 'smooth'
                    });
                });
            }
        });
    </script>
</body>

</html>