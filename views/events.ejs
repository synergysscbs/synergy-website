    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        /* ===== EVENTS STYLES ===== */
        :root {
            --brand: #00aaff;
            --bg: #000000;
            --text: #ffffff;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: "Poppins", system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
            background: var(--bg);
            color: var(--text);
            overflow-x: hidden;
            position: relative;
            min-height: 100vh;
        }

        .events {
            width: 100%;
            position: relative;
            z-index: 999;
            background-image: url('https://www.transparenttextures.com/patterns/asfalt-dark.png');
            background-repeat: repeat;
            background-size: cover;
            padding-bottom: 60px;
        }

        .main-event {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: clamp(24px, 4vw, 60px);
            padding: clamp(48px, 6vw, 80px);
            cursor: pointer;
            text-decoration: none;
            color: var(--text);
            border-radius: 15px;
            transition: transform 0.3s ease, background 0.4s ease;
            background: linear-gradient(to right, rgba(0, 170, 255, 0.12), transparent 70%);
        }

        .main-event:nth-child(even) {
            flex-direction: row-reverse;
            background: linear-gradient(to left, rgba(0, 170, 255, 0.12), transparent 70%);
        }

        .main-event:hover {
            transform: translateY(-6px);
            background-color: rgba(255, 255, 255, 0.02);
        }

        .main-event .content {
            flex: 1;
            max-width: 60ch;
        }

        .main-event .title {
            font-size: clamp(32px, 4vw, 48px);
            font-weight: 900;
            margin-bottom: 0.6rem;
            transition: text-shadow 0.3s ease;
        }

        .main-event:hover .title {
            text-shadow: 0 0 10px var(--brand), 0 0 20px var(--brand);
        }

        .main-event .desc {
            color: #cfcfcf;
            line-height: 1.65;
            font-size: clamp(16px, 1.4vw, 18px);
        }

        .btn {
            display: inline-block;
            padding: 10px 22px;
            border: 2px solid #fff;
            border-radius: 7px;
            color: #fff;
            text-decoration: none;
            font-weight: 700;
            position: relative;
            overflow: hidden;
            z-index: 1;
            transition: color 0.3s ease, border-color 0.3s ease;
            margin-top: 16px;
        }

        .btn::before {
            content: "";
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: var(--brand);
            transition: left 0.3s ease;
            z-index: -1;
        }

        .btn:hover::before {
            left: 0;
        }

        .btn:hover {
            color: #00110a;
            border-color: var(--brand);
        }

        /* NEW: Event Logo Styles */
        .event-logo {
            flex-shrink: 0;
            width: 280px;
            height: 200px;
            border-radius: 12px;
            overflow: hidden;
            position: relative;
            box-shadow: 0 8px 30px rgba(0, 170, 255, 0.25);
            transition: all 0.4s ease;
            border: 2px solid rgba(255, 255, 255, 0.1);
        }

        .event-logo img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .main-event:hover .event-logo {
            box-shadow: 0 12px 40px rgba(0, 170, 255, 0.4);
        }

        .main-event:hover .event-logo img {
            transform: scale(1.05);
        }

        .event-logo::after {
            content: "";
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, rgba(0, 170, 255, 0.2) 0%, transparent 70%);
            opacity: 0.7;
            transition: opacity 0.3s ease;
        }

        .main-event:hover .event-logo::after {
            opacity: 0.9;
        }

        /* ===== BACKGROUND ELEMENTS ===== */
        .parallax-bg {
            position: fixed;
            inset: 0;
            background: #000;
            z-index: -2;
            transform: scale(1.1);
        }

        .particles {
            position: fixed;
            inset: 0;
            pointer-events: none;
            z-index: -1;
        }

        .particle {
            position: absolute;
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(4px);
            -webkit-backdrop-filter: blur(4px);
            will-change: transform;
        }

        /* ===== MEDIA QUERIES ===== */
        @media (max-width: 900px) {
            .main-event {
                flex-direction: column !important;
                text-align: center;
            }

            .event-logo {
                width: 80%;
                max-width: 300px;
                margin: 0 auto 20px;
            }
        }

        @media (max-width: 600px) {
            .event-logo {
                width: 90%;
                height: 180px;
            }
        }
    </style>
</head>

<body>

    <%- include('partials/navbar') %>
        <!-- Background Elements -->
        <div class="parallax-bg"></div>
        <div class="particles"></div>

        <!-- EVENTS -->
        <section class="events">
