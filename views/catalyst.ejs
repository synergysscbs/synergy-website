<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Catalyst 25 - Case Competition</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --dark-bg: #0a0a14;
            --dark-card: #151528;
            --dark-accent: #1c1c36;
            --primary: #8c6dfd;
            --primary-light: #a892ff;
            --secondary: #ff9d5c;
            --text: #e6e6f0;
            --text-muted: #a2a2c3;
            --transition: all 0.4s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color: var(--text);
            line-height: 1.6;
            overflow-x: hidden;
            background: var(--dark-bg);
            background-image:
                radial-gradient(circle at 15% 50%, rgba(140, 109, 253, 0.1) 0%, transparent 20%),
                radial-gradient(circle at 85% 30%, rgba(255, 157, 92, 0.1) 0%, transparent 20%);
        }

        h1,
        h2,
        h3,
        h4,
        h5 {
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            margin-bottom: 1rem;
            color: var(--text);
        }

        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
        }

        section {
            padding: 5rem 0;
        }

        .text-center {
            text-align: center;
        }

        .btn {
            display: inline-block;
            padding: 12px 28px;
            background: var(--primary);
            color: white;
            border-radius: 30px;
            text-decoration: none;
            font-weight: 600;
            transition: var(--transition);
            border: none;
            cursor: pointer;
            box-shadow: 0 4px 15px rgba(140, 109, 253, 0.3);
        }

        .btn:hover {
            background: var(--primary-light);
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(140, 109, 253, 0.4);
        }

        .btn-secondary {
            background: var(--secondary);
            color: #2a1c0f;
        }

        .btn-secondary:hover {
            background: #ffae76;
        }

        /* Hero Section */
        .hero {
            height: 100vh;
            background: linear-gradient(rgba(10, 10, 20, 0.85), rgba(10, 10, 20, 0.95)), url('https://images.unsplash.com/photo-1533750349088-cd871a92f312?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1770&q=80') no-repeat center center/cover;
            color: var(--text);
            display: flex;
            align-items: center;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .hero-content {
            max-width: 800px;
            margin: 0 auto;
            z-index: 2;
        }

        .hero h1 {
            font-family: 'Montserrat', sans-serif !important;
            font-size: 4rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            opacity: 0;
            transform: translateY(20px);
            animation: fadeInUp 1s forwards 0.5s;
            background: linear-gradient(135deg, var(--text) 0%, var(--primary-light) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .hero p {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            opacity: 0;
            transform: translateY(20px);
            animation: fadeInUp 1s forwards 0.8s;
            color: var(--text-muted);
        }

        .hero .btn {
            opacity: 0;
            transform: translateY(20px);
            animation: fadeInUp 1s forwards 1.1s;
        }

        .hero-badge {
            position: absolute;
            top: 2rem;
            right: 2rem;
            background: var(--secondary);
            color: #2a1c0f;
            padding: 0.5rem 1.5rem;
            border-radius: 30px;
            font-weight: 600;
            transform: rotate(5deg);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        /* About Section */
        .about {
            background: var(--dark-bg);
        }

        .section-title {
            position: relative;
            margin-bottom: 3rem;
        }

        .section-title:after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 4px;
            background: var(--secondary);
        }

        .stats-container {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
            margin: 3rem 0;
        }

        .stat-box {
            text-align: center;
            padding: 2rem;
            border-radius: 15px;
            background: var(--dark-card);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
            margin: 1rem;
            flex: 1;
            min-width: 200px;
            transition: var(--transition);
            border: 1px solid var(--dark-accent);
        }

        .stat-box:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
            border-color: var(--primary);
        }

        .stat-number {
            font-size: 3rem;
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 0.5rem;
        }

        .stat-text {
            font-weight: 600;
            color: var(--text-muted);
        }

        /* Event Images Section */
        .event-images {
            background: var(--dark-accent);
            padding: 5rem 0;
        }

        .image-gallery {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
            margin-top: 2rem;
        }

        .gallery-item {
            position: relative;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
            transition: var(--transition);
            height: 250px;
            background: var(--dark-card);
            border: 1px solid var(--dark-accent);
        }

        .gallery-item:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
            border-color: var(--primary);
        }

        .gallery-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: var(--transition);
        }

        .gallery-item:hover img {
            transform: scale(1.05);
        }

        .image-placeholder {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100%;
            background: linear-gradient(45deg, var(--dark-card), var(--dark-accent));
            color: var(--text-muted);
            font-size: 1.2rem;
            text-align: center;
            padding: 2rem;
        }

        /* Rounds Section */
        .rounds {
            background: var(--dark-accent);
            position: relative;
            overflow: hidden;
        }

        .rounds:before {
            content: '';
            position: absolute;
            top: -100px;
            right: -100px;
            width: 300px;
            height: 300px;
            border-radius: 50%;
            background: radial-gradient(circle, var(--primary) 0%, transparent 70%);
            opacity: 0.1;
        }

        .rounds:after {
            content: '';
            position: absolute;
            bottom: -100px;
            left: -100px;
            width: 300px;
            height: 300px;
            border-radius: 50%;
            background: radial-gradient(circle, var(--secondary) 0%, transparent 70%);
            opacity: 0.1;
        }

        .timeline {
            position: relative;
            max-width: 800px;
            margin: 0 auto;
        }

        .timeline:before {
            content: '';
            position: absolute;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 4px;
            height: 100%;
            background: var(--primary);
            opacity: 0.5;
        }

        .timeline-item {
            position: relative;
            margin-bottom: 3rem;
            width: 50%;
            padding: 0 40px;
        }

        .timeline-item:nth-child(odd) {
            left: 0;
        }

        .timeline-item:nth-child(even) {
            left: 50%;
        }

        .timeline-content {
            background: var(--dark-card);
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
            transition: var(--transition);
            position: relative;
            border: 1px solid var(--dark-accent);
        }

        .timeline-content:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
            border-color: var(--primary);
        }

        .timeline-content:after {
            content: '';
            position: absolute;
            top: 20px;
            width: 0;
            height: 0;
            border-style: solid;
        }

        .timeline-item:nth-child(odd) .timeline-content:after {
            right: -15px;
            border-width: 15px 0 15px 15px;
            border-color: transparent transparent transparent var(--dark-card);
        }

        .timeline-item:nth-child(even) .timeline-content:after {
            left: -15px;
            border-width: 15px 15px 15px 0;
            border-color: transparent var(--dark-card) transparent transparent;
        }

        .timeline-date {
            display: inline-block;
            padding: 0.5rem 1rem;
            background: var(--primary);
            color: white;
            border-radius: 30px;
            font-weight: 600;
            margin-bottom: 1rem;
            box-shadow: 0 4px 10px rgba(140, 109, 253, 0.3);
        }

        /* Prizes Section */
        .prizes {
            background: var(--dark-bg);
        }

        .prize-cards {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 2rem;
            margin-top: 3rem;
        }

        .prize-card {
            background: linear-gradient(135deg, var(--dark-card) 0%, var(--dark-accent) 100%);
            color: var(--text);
            border-radius: 15px;
            padding: 2.5rem;
            width: 300px;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            transition: var(--transition);
            position: relative;
            overflow: hidden;
            border: 1px solid var(--dark-accent);
        }

        .prize-card:before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.05), transparent);
            transform: rotate(45deg);
            transition: var(--transition);
            z-index: 1;
        }

        .prize-card:hover:before {
            transform: rotate(45deg) translate(20px, 20px);
        }

        .prize-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
            border-color: var(--primary);
        }

        .prize-card h3 {
            font-size: 1.8rem;
            margin-bottom: 1rem;
            position: relative;
            z-index: 2;
        }

        .prize-card .price {
            font-size: 2.5rem;
            font-weight: 700;
            margin: 1.5rem 0;
            color: var(--secondary);
            position: relative;
            z-index: 2;
            text-shadow: 0 2px 10px rgba(255, 157, 92, 0.3);
        }

        .prize-card ul {
            list-style: none;
            margin: 1.5rem 0;
            position: relative;
            z-index: 2;
        }

        .prize-card li {
            margin-bottom: 0.8rem;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--text-muted);
        }

        .prize-card i {
            margin-right: 10px;
            color: var(--secondary);
        }

        /* Partners Section */
        .partners {
            background: var(--dark-accent);
            position: relative;
            overflow: hidden;
        }

        .partners:before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%238c6dfd' fill-opacity='0.05' fill-rule='evenodd'/%3E%3C/svg%3E");
            opacity: 0.5;
        }

        .partner-logos {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            gap: 3rem;
            margin-top: 3rem;
        }

        .partner-logo {
            background: var(--dark-card);
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
            transition: var(--transition);
            width: 250px;
            height: 150px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 1px solid var(--dark-accent);
        }

        .partner-logo:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
            border-color: var(--primary);
        }

        .partner-logo img {
            max-width: 100%;
            max-height: 100px;
            filter: grayscale(100%) brightness(200%);
            opacity: 0.7;
            transition: var(--transition);
        }

        .partner-logo:hover img {
            filter: grayscale(0%) brightness(100%);
            opacity: 1;
        }

        /* Animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fade-in {
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.8s ease, transform 0.8s ease;
        }

        .fade-in.visible {
            opacity: 1;
            transform: translateY(0);
        }

        /* Responsive Design */
        @media (max-width: 992px) {
            .hero h1 {
                font-size: 3rem;
            }

            .timeline:before {
                left: 30px;
            }

            .timeline-item {
                width: 100%;
                padding-left: 70px;
                padding-right: 0;
            }

            .timeline-item:nth-child(even) {
                left: 0;
            }

            .timeline-item:nth-child(odd) .timeline-content:after {
                left: -15px;
                right: auto;
                border-width: 15px 15px 15px 0;
                border-color: transparent var(--dark-card) transparent transparent;
            }
        }

        @media (max-width: 768px) {
            .hero h1 {
                font-size: 2.5rem;
            }

            .stat-box {
                min-width: 100%;
            }

            .image-gallery {
                grid-template-columns: 1fr;
            }

            .partner-logo {
                width: 200px;
                height: 120px;
            }
        }
    </style>
</head>

